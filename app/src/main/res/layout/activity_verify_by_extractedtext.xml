<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/color"
    android:orientation="vertical"
    tools:context=".VerifyByText"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/display_text_view"
            android:text="Enter your Ayah"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="35dp"
            android:layout_marginBottom="20dp"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>


        <EditText
            android:id="@+id/editInput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="20dp"
            android:background="#ffff"
            android:hint="Enter Your Ayah Here"
            android:inputType="textMultiLine|textAutoComplete"
            android:padding="15dp"

            android:paddingTop="20dp" />

        <EditText
            android:id="@+id/editInput2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:background="#ffff"
            android:hint="Enter Keywords Here"
            android:inputType="textMultiLine|textAutoComplete"
            android:padding="15dp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="*Please enter atleast two keywords in the input field  above that should exist in the ayah you entered" />


        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="40dp"
            android:paddingLeft="60dp"
            android:paddingTop="25dp"
            android:paddingRight="60dp"
            android:paddingBottom="25dp"
            android:text="Verify"
            android:textColor="#000000"
            android:theme="@style/myButtonTheme" />

    </LinearLayout>
</ScrollView>
